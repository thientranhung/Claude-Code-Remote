    "Stop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node /path/to/new-claude-code-remote/notify.js completed",
        "timeout": 5
      }]
    }],
    "SubagentStop": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node /path/to/new-claude-code-remote/notify.js completed",
        "timeout": 5
      }]
    }],
    "Decision": [{
      "matcher": "*",
      "hooks": [{
        "type": "command",
        "command": "node /path/to/new-claude-code-remote/notify.js decision",
        "timeout": 5
      }]
    }]
  }
} 