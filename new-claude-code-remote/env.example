# ========================================
# Claude Code Remote - Environment Configuration
# ========================================

# TMUX Session Configuration (REQUIRED)
TMUX_SESSION_NAME=claude-session

# ========================================
# Email Configuration
# ========================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME=Claude Code Remote
EMAIL_TO=your-notification-email@gmail.com

# ========================================
# Telegram Configuration
# ========================================
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here
TELEGRAM_WEBHOOK_PORT=3001
TELEGRAM_FORCE_IPV4=false

# ========================================
# Notification Settings
# ========================================
NOTIFICATION_TIMEOUT=5000
NOTIFICATION_DISPLAY_TIME=10000
LOG_LEVEL=info 